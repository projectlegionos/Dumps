<?xml version="1.0" encoding="utf-8"?>
<filter-conf>
    <version>2023101010</version>
    <filter-name>sys_app_switch_config</filter-name>

    <!-- monitor all package change notification start -->
    <matchAppDefault>com.coloros.appswitch.all</matchAppDefault>
    <matchAppDefault>com.coloros.athena</matchAppDefault>
    <matchAppDefault>com.nearme.statistics.rom</matchAppDefault>
    <matchAppDefault>com.coloros.deepthinker</matchAppDefault>
    <matchAppDefault>com.coloros.safecenter</matchAppDefault>
    <matchAppDefault>com.coloros.colorfilestand</matchAppDefault>
    <matchAppDefault>com.coloros.oppoguardelf</matchAppDefault>
    <matchAppDefault>com.oppo.autotest.themismonitor</matchAppDefault>
    <matchAppDefault>com.oppo.autotest.memleakmonitor</matchAppDefault>
    <matchAppDefault>com.oppo.autotest.performance</matchAppDefault>
    <matchAppDefault>com.coloros.exserviceui</matchAppDefault>
    <matchAppDefault>android</matchAppDefault>
    <matchAppDefault>com.coloros.securitypermission</matchAppDefault>
    <matchAppDefault>com.coloros.otrace</matchAppDefault>
    <matchAppDefault>com.oplus.linker</matchAppDefault>

    <!-- add for remove oppo related keywords-->
    <matchAppDefault>com.oplus.deepthinker</matchAppDefault>
    <matchAppDefault>com.oplus.safecenter</matchAppDefault>
    <matchAppDefault>com.oplus.securitypermission</matchAppDefault>
    <matchAppDefault>com.oplus.onetrace</matchAppDefault>
    <matchAppDefault>com.oplus.obrain</matchAppDefault>
    <matchAppDefault>com.oplus.battery</matchAppDefault>
    <matchAppDefault>com.oplus.exserviceui</matchAppDefault>
    <matchAppDefault>com.oplus.athena</matchAppDefault>
    <matchAppDefault>com.oplus.autotest.themismonitor</matchAppDefault>
    <matchAppDefault>com.oplus.autotest.memleakmonitor</matchAppDefault>
    <matchAppDefault>com.oplus.autotest.performance</matchAppDefault>
    <matchAppDefault>com.oplus.statistics.rom</matchAppDefault>
    <matchAppDefault>com.oplus.exsystemservice</matchAppDefault>
    <matchAppDefault>com.android.systemui</matchAppDefault>
    <!-- monitor all package change notification end -->

    <!-- monitor all Activity change notification start -->
    <matchActivityDefault>com.coloros.appswitch.all</matchActivityDefault>
    <matchActivityDefault>com.oplus.deepthinker</matchActivityDefault>
    <matchActivityDefault>com.oplus.statistics.rom</matchActivityDefault>
    <!-- monitor all Activity change notification end -->

    <!-- pause in recents animation start -->
    <matchRecentsAnimApp>com.ss.android.ugc.aweme</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.kuaishou.nebula</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.ss.android.ugc.aweme.lite</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.tencent.qqlive</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.ss.android.article.video</matchRecentsAnimApp>
    <matchRecentsAnimApp>tv.danmaku.bili</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.youku.phone</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.baidu.haokan</matchRecentsAnimApp>
    <matchRecentsAnimApp>com.hunantv.imgo.activity</matchRecentsAnimApp>
    <switchRecentsAnimApp>1</switchRecentsAnimApp>
    <!-- pause in recents animation end -->

    <!-- Broadcast notification start-->
    <rule>
        <pkg>com.coloros.osecret</pkg>
         <config>
            <type>2</type>
                <name>com.android.packageinstaller</name>
                <name>com.coloros.gamespace</name>
                <name>com.oplus.cosa</name>
                <name>com.coloros.backuprestore</name>
                <name>com.google.android.packageinstaller</name>
                <name>com.nearme.gamecenter</name>
                <name>com.oppo.market</name>
        </config>
    </rule>
    <!-- Broadcast notification end-->

    <!-- forbidden resume when locked start-->
    <forbiddenResume>com.ss.android.ugc.aweme</forbiddenResume>
    <forbiddenResume>com.hunantv.imgo.activity</forbiddenResume>
    <forbiddenResume>tv.danmaku.bili</forbiddenResume>
    <forbiddenResume>com.oplus.linker</forbiddenResume>
    <!-- forbidden resume when locked end-->
</filter-conf>
